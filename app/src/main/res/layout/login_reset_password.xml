<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cjproject.login.ResetPassword">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textview_1"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="76dp"
            android:text="인증되었습니다\n비밀번호를 재설정해주세요."
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edittext_password2"
            android:layout_width="355dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:background="@drawable/border"
            android:hint="  비밀번호" />

        <EditText
            android:id="@+id/edittext_checkpassword"
            android:layout_width="355dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"
            android:background="@drawable/border"
            android:hint="  비밀번호 재확인" />

        <Button
            android:id="@+id/button_resetpassword"
            android:layout_width="355dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:text="재설정"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#029AFF"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>